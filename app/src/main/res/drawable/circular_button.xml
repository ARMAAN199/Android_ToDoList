<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color -->
    <solid android:color="@color/accent" />

    <!-- Border color and width (optional) -->
    <stroke
        android:width="2dp"
        android:color="@color/accent" />

    <!-- Padding (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- You can also set corner radius to create a rounded button -->
    <!-- <corners android:radius="16dp" /> -->

</shape>